ifndef _INC_WINAPIFAMILY
_INC_WINAPIFAMILY equ <>
ifndef _WINDEF_
 include windef.inc
endif

WINAPI_FAMILY_PC_APP	equ 2
WINAPI_FAMILY_PHONE_APP equ 3
WINAPI_FAMILY_SYSTEM	equ 4
WINAPI_FAMILY_SERVER	equ 5
WINAPI_FAMILY_GAMES	equ 6
WINAPI_FAMILY_DESKTOP_APP equ 100
WINAPI_FAMILY_APP	equ WINAPI_FAMILY_PC_APP

ifndef WINAPI_FAMILY
WINAPI_FAMILY		equ WINAPI_FAMILY_DESKTOP_APP
endif

if (WINAPI_FAMILY NE WINAPI_FAMILY_DESKTOP_APP) AND \
   (WINAPI_FAMILY NE WINAPI_FAMILY_PC_APP) AND \
   (WINAPI_FAMILY NE WINAPI_FAMILY_PHONE_APP) AND \
   (WINAPI_FAMILY NE WINAPI_FAMILY_SYSTEM) AND \
   (WINAPI_FAMILY NE WINAPI_FAMILY_GAMES) AND \
   (WINAPI_FAMILY NE WINAPI_FAMILY_SERVER)
.err<Unknown WINAPI_FAMILY value.>
endif

ifndef WINAPI_PARTITION_DESKTOP
WINAPI_PARTITION_DESKTOP equ (WINAPI_FAMILY EQ WINAPI_FAMILY_DESKTOP_APP)
endif

ifndef WINAPI_PARTITION_APP
WINAPI_PARTITION_APP equ \
  (WINAPI_FAMILY EQ WINAPI_FAMILY_DESKTOP_APP OR \
   WINAPI_FAMILY EQ WINAPI_FAMILY_PC_APP OR \
   WINAPI_FAMILY EQ WINAPI_FAMILY_PHONE_APP)
endif

ifndef WINAPI_PARTITION_PC_APP
WINAPI_PARTITION_PC_APP equ \
  (WINAPI_FAMILY EQ WINAPI_FAMILY_DESKTOP_APP OR \
   WINAPI_FAMILY EQ WINAPI_FAMILY_PC_APP)
endif

ifndef WINAPI_PARTITION_PHONE_APP
WINAPI_PARTITION_PHONE_APP equ (WINAPI_FAMILY EQ WINAPI_FAMILY_PHONE_APP)
endif

ifndef WINAPI_PARTITION_GAMES
WINAPI_PARTITION_GAMES equ \
  (WINAPI_FAMILY EQ WINAPI_FAMILY_GAMES OR \
   WINAPI_FAMILY EQ WINAPI_FAMILY_DESKTOP_APP)
endif

ifndef WINAPI_PARTITION_SYSTEM
WINAPI_PARTITION_SYSTEM equ \
  (WINAPI_FAMILY EQ WINAPI_FAMILY_SYSTEM OR \
   WINAPI_FAMILY EQ WINAPI_FAMILY_GAMES OR \
   WINAPI_FAMILY EQ WINAPI_FAMILY_SERVER)
endif

WINAPI_PARTITION_PHONE	equ WINAPI_PARTITION_PHONE_APP

WINAPI_FAMILY_PARTITION macro Partitions
	exitm<(Partitions)>
	endm

_WINAPI_DEPRECATED_DECLARATION equ <__declspec(deprecated("This API cannot be used in the context of the caller's application type."))>

if WINAPI_FAMILY_PARTITION(WINAPI_PARTITION_APP) AND NOT WINAPI_FAMILY_PARTITION(WINAPI_PARTITION_DESKTOP)
APP_DEPRECATED_HRESULT equ _WINAPI_DEPRECATED_DECLARATION
endif

endif
